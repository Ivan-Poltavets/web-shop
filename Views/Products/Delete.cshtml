@model OnlineShop.Models.Product
@inject GetNameById GetNameById
@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1>Delete</h1>
    <h4>Product</h4>
    <hr />


    <div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" value="@Model.Name" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <input class="form-control" value="@GetNameById.Execute(Model.CategoryId)" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="ImageName">Image</label>
                    <input class="form-control" value="@Model.ImageName" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input class="form-control" value="@Math.Round(Model.Price)" readonly />
                </div>
            </div>
        </div>
        <br />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>