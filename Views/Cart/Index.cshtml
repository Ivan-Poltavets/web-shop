@{
    ViewData["Title"] = "Cart";
}

@model IEnumerable<CartItem>
@inject IProductRepository ProductRepository

<div class="container">
    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
    @{
        decimal totalPrice = 0;
        foreach (var item in Model)
        {
            var product = ProductRepository.GetProduct(item.ProductId);
            totalPrice += product.Price * item.Quantity;
            <div class="card mb-3" style="width:55rem;height:200px;padding:0;margin-top:20px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Upload/@product.ImageName" class="img-fluid rounded-start" style="margin-left:20px;margin-top:10px;width:200px;height:180px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">
                                @product.Name
                            </h3>
                            <h5>Quantity @item.Quantity</h5>
                            <a class="btn btn-primary changeQuantity" asp-route-id="@item.Id" asp-action="ChangeQuantity" style="position:absolute;margin-left:29.75rem;margin-top:-40px">Change</a>
                            <div class="d-flex">
                                <h4>@(product.Price * item.Quantity)$</h4>
                                <form method="post" asp-action="Remove" asp-route-id="@item.Id" style="position:absolute;margin-left:30rem">
                                    <button type="submit" class="btn btn-primary">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    <hr />
    <h3>Total price: @totalPrice</h3>
</div>

@section scripts
{
    <script type="text/javascript">
 
        $(function () {
            $.ajaxSetup({ cache: false });
           $(".changeQuantity").click(function (e) {
 
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}