@model IEnumerable<OnlineShop.Models.Product>


<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="width:16rem;padding:0;margin-left:20px">
                @if (item.ImagePath != "null")
                {
                    <img src="~/Upload/@item.ImagePath" class="card-img-top" style="width:100%;height:150px;">
                }
                else
                {
                    <img src="~/Upload/default.jpg" class="card-img-top" style="width:100%;height:150px">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h5 class="card-text">@(item.Price)$</h5>
                </div>
            </div>
        }
    </div>
    <div class=""></div>
</div>
